# ============================================
# Vizion Academy - Production Environment
# Copy this file to .env and configure values
# ============================================

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=vizion
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_HERE
POSTGRES_DB=vizion_db

# ===========================================
# Backend Configuration
# ===========================================
NODE_ENV=production
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARS

# CORS Configuration (your domain)
CORS_ORIGIN=https://vizion.yourdomain.com

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=https://api.vizion.yourdomain.com

# ===========================================
# Domain Configuration (for nginx)
# ===========================================
DOMAIN=vizion.yourdomain.com
SSL_EMAIL=admin@yourdomain.com
